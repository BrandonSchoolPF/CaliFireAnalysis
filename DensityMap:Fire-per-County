 testFrame <- read.csv("California_Fire_Incidents.csv")
  
  testFrame <- testFrame[,-2]
  
  testFrame <- testFrame[,-6]
  
  testFrame <- testFrame[,-9]
  
  testFrame <- testFrame[,-14:-16]
  
  testFrame <- testFrame[,-21]
 
  testFrame <- testFrame[,-22]

